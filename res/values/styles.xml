<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="progressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/jx_iotv_progress_horizontal</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="TVBaseWhiteTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/jx_tv_text_size_normal</item>
        <item name="android:includeFontPadding">true</item>
    </style>
    <style name="TVBaseWhiteTextViewLarge">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/jingxuan_tv_text_size_large</item>
        <item name="android:includeFontPadding">true</item>
    </style>
    <style name="Jingxuan_TVBaseWhiteTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/jingxuan_tv_text_size_normal</item>
        <item name="android:includeFontPadding">true</item>
    </style>

    <style name="TVBaseGrayTextView">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/jx_tv_text_size_normal</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TVChannelNameTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/jx_tv_text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TVDateNameWhiteTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/jx_tv_text_size_date_name</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TVDialog" parent="@android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TVDialogTitleWhiteTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/jx_tv_text_size_large</item>
    </style>

    <style name="TVDialogMsgWhiteTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/jx_tv_text_size_dialog_msg</item>
    </style>

</resources>