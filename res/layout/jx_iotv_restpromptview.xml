<?xml version="1.0" encoding="utf-8"?>
<com.bestv.ott.jingxuan.view.RestPromptView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
      
   <RelativeLayout
        android:id="@+id/rPrompt"
        android:layout_width="700dp"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:background="@drawable/jx_iotv_rest_bg"
        android:gravity="center"
        android:visibility="visible" >

        <TextView
            android:id="@+id/txtPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="@string/prompt_rest_tip"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/btnContinue"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_below="@+id/txtPrompt"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/jx_iotv_buttonselector"
            android:scaleType="fitXY"
            android:src="@drawable/jx_iotv_rest_continue" />

        <ImageButton
            android:id="@+id/btnRest"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_alignBaseline="@+id/btnContinue"
            android:layout_below="@+id/txtPrompt"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@+id/btnContinue"
            android:background="@drawable/jx_iotv_buttonselector"
            android:scaleType="fitXY"
            android:src="@drawable/jx_iotv_rest_ok" />
    </RelativeLayout>

</com.bestv.ott.jingxuan.view.RestPromptView>